<UserControl x:Class="EOL.Views.SettingsAdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EOL.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- MCU params row -->
                <RowDefinition Height="5" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="8" />
                <RowDefinition Height="Auto" />
                <!-- WATS config expander -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Existing row -->
            <Grid Grid.Row="0" Margin="0,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="MCU parameters json file"
                           VerticalAlignment="Center" />

                <TextBox Grid.Column="2"
                         Text="{Binding EolSettings.DeviceSetupUserData.MCUJsonPath}" />

                <Button Grid.Column="4"
                        Content="..."
                        Command="{Binding BrowseMCUParametersJsonPathCommand}" />
            </Grid>

            <!-- New: WATS Configuration -->
            <Expander Grid.Row="2"
                      Header="WATS Configuration"
                      IsExpanded="False"
                      Margin="0,8,0,0">
                <Grid Margin="8,6,8,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <!-- labels -->
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                        <!-- inputs -->
                    </Grid.ColumnDefinitions>

                    <!-- Test operation (dropdown) -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Test operation"
                               VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="0" Grid.Column="2"
                              ItemsSource="{Binding TestOperations}"
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding SelectedTestOperation}"
                              IsSynchronizedWithCurrentItem="True"
                              MinWidth="220"/>

                    <!-- Software filename (read-only display) -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Software filename"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="2"
                             Text="{Binding SoftwareFilename, Mode=OneWay}"
                             IsReadOnly="True"
                             IsReadOnlyCaretVisible="False"
                             BorderBrush="{DynamicResource {x:Static SystemColors.InactiveBorderBrushKey}}"
                             MinWidth="220"/>

                    <!-- Software version (read-only display) -->
                    <TextBlock Grid.Row="4" Grid.Column="0"
                               Text="Software version"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Row="4" Grid.Column="2"
                             Text="{Binding SoftwareVersion, Mode=OneWay}" 
                             IsReadOnly="True"
                             IsReadOnlyCaretVisible="False"
                             BorderBrush="{DynamicResource {x:Static SystemColors.InactiveBorderBrushKey}}"
                             MinWidth="220"/>
                    
                    
                    <TextBlock Grid.Row="6" Grid.Column="0"
                               Text="Location"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Row="6" Grid.Column="2"
                             Text="{Binding MachineLocation, Mode=OneWay}" 
                             IsReadOnly="True"
                             IsReadOnlyCaretVisible="False"
                             BorderBrush="{DynamicResource {x:Static SystemColors.InactiveBorderBrushKey}}"
                             MinWidth="220"/>
                </Grid>
            </Expander>
            <Expander Grid.Row="4"
          Header="Approve pending package"
          IsExpanded="False"
          Margin="0,8,0,0"
          Visibility="{Binding IsPackagePending, Converter={StaticResource BoolToVis}}">
                <Grid Margin="8,6,8,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <!-- labels -->
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                        <!-- inputs -->
                    </Grid.ColumnDefinitions>

                    <!-- 1) Pending package name (read-only) -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Pending package"
                   VerticalAlignment="Center"/>
                    <TextBox  Grid.Row="0" Grid.Column="2"
                  Text="{Binding PendingPackageName, Mode=OneWay}"
                  IsReadOnly="True"
                  BorderBrush="{DynamicResource {x:Static SystemColors.InactiveBorderBrushKey}}"
                  MinWidth="220"/>

                    <!-- 2) Approved by (prompt for name) -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Approved by"
                   VerticalAlignment="Center"/>
                    <TextBox  Grid.Row="2" Grid.Column="2"
                  Text="{Binding ApprovedBy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  MinWidth="220"
                  ToolTip="Enter approver's full name"/>

                    <!-- 3) Release button -->
                    <Button Grid.Row="4" Grid.Column="2"
                Content="Approve package"
                HorizontalAlignment="Left"
                Padding="14,4"
                Command="{Binding ReleasePackageCommand}"
                IsEnabled="{Binding CanReleasePendingPackage}"/>
                </Grid>
            </Expander>

        </Grid>
    </Grid>
</UserControl>
