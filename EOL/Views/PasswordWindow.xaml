<Window x:Class="EOL.Views.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EOL.Views"
        mc:Ignorable="d"
        Title="Admin Password"
        Height="200" Width="320"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="12">
        <TextBlock Text="Enter Admin Password:" Margin="0,0,0,6"/>
        <PasswordBox x:Name="PasswordBox"
                     Height="28"
                     PasswordChanged="PasswordBox_OnPasswordChanged"/>
        
        <!-- Inline message area (hidden by default) -->
        <TextBlock x:Name="InlineMessage"
                   Margin="0,6,0,0"
                   Foreground="IndianRed"
                   Opacity="0.9"
                   Visibility="Collapsed"
                   TextWrapping="Wrap" />

        <!-- Attempts left (if you use attempts) -->
        <TextBlock x:Name="AttemptsText"
                   Margin="0,4,0,0"
                   Foreground="Gray"
                   Visibility="Collapsed"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="OkButton" Content="OK" Width="90" IsDefault="True"
                    Click="OKButton_Click" IsEnabled="False"/>
            <Button Content="Cancel"
                    Width="90"
                    Margin="8,0,0,0"
                    IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
